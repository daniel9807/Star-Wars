---
import ImgPerson from "../json/img.json";
interface Props {
  name: string;
  height: string;
  mass: string;
  hair_color: string;
  skin_color: string;
  eye_color: string;
  birth_year: string;
}

const { name, birth_year, height, mass, hair_color, skin_color, eye_color } =
  Astro.props;

const personImg = ImgPerson.map((person) => ({
  nombre: person.name,
  img: person.imagen,
}));

const encontrado = personImg.find((person) => person.nombre == name);

